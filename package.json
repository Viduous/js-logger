{
  "name": "js-logger",
  "version": "2.0.0-pre",
  "description": "Lightweight, unobtrusive, configurable JavaScript logger",
  "author": "Jonny Reeves (http://jonnyreeves.co.uk)",
  "homepage": "http://github.com/jonnyreeves/js-logger",
  "repository": {
    "type": "git",
    "url": "git://github.com/jonnyreeves/js-logger.git"
  },
  "bugs": {
    "url": "http://github.com/jonnyreeves/js-logger/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/jonnyreeves/js-logger/blob/master/MIT-LICENSE.txt"
    }
  ],
  "main": "lib/logger.js",
  "typings": "lib/logger.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rimraf lib/*",
    "test": "npm run build && npm run test:browser && npm run test:nodejs && npm run test:typescript",
    "test:browser": "node-qunit-phantomjs ./test/browser/index.html",
    "test:nodejs": "node ./test/nodejs/require.js",
    "test:typescript": "cd ./test/typescript && tsc",
    "lint": "npm run lint:tslint && npm run lint:jshint",
    "lint:tslint": "tslint --project .",
    "lint:jshint": "jshint .",
    "build": "npm run build:compile && npm run build:bundle && npm run build:version-bundle && npm run build:minify",
    "build:compile": "tsc",
    "build:bundle": "browserify lib/logger.js -o lib/logger.bundle.js",
    "build:minify": "uglifyjs lib/logger.bundle.js -o lib/logger.min.js",
    "build:version-bundle": "cross-env replace -s @VERSION@ $npm_package_version lib/logger.bundle.js"
  },
  "devDependencies": {
    "browserify": "^15.2.0",
    "cross-env": "^5.1.3",
    "jshint": "^2.9.5",
    "node-qunit-phantomjs": "^2.0.0",
    "replace": "^0.3.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "uglify-js": "3"
  }
}
